@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div class="row">
    <div>
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div class="d-flex flex-column flex-md-row">
                <div class="p-2 w-100">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" class="form-control" disabled />
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.PhoneNumber"></label>
                        <input asp-for="Input.PhoneNumber" class="form-control" />
                        <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.StartDate"></label>
                        <input asp-for="Input.StartDate" class="form-control" />
                        <span asp-validation-for="Input.StartDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.TargetDate"></label>
                        <input asp-for="Input.TargetDate" class="form-control" />
                        <span asp-validation-for="Input.TargetDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.StartWeight"></label>
                        <input asp-for="Input.StartWeight" class="form-control" />
                        <span asp-validation-for="Input.StartWeight" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.TargetWeight"></label>
                        <input asp-for="Input.TargetWeight" class="form-control" />
                        <span asp-validation-for="Input.TargetWeight" class="text-danger"></span>
                    </div>
                    <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
                </div>
                <div class="p-2 w-100">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.ProfilePicture" style="width: 100%;"></label>
                        @if (Model.Input.ProfilePicture != null)
                        {
                            <img id="profilePicture" style="max-width: 100%;" src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))">
                        }
                        else
                        {
                            <img id="profilePicture" style="max-width: 100%;" src="">
                        }
                        <input type="file"
                               accept=".png,.jpg,.jpeg,.gif,.tif"
                               asp-for="Input.ProfilePicture"
                               class="form-control"
                               style="border:0px!important;padding: 0px;padding-top: 10px;padding-bottom: 30px;"
                               onchange="document.getElementById('profilePicture').src = window.URL.createObjectURL(this.files[0])" />
                        <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}